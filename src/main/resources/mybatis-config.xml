                <property name="url" value="jdbc:postgresql://47.95.4.200:5432/trains"/>
                <property name="username" value="****"/>
                <property name="password" value="****"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <package name="com.hk.mapper"/>
    </mappers>

</configuration>